<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient_background"
    android:paddingBottom="8dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_menu"
        android:layout_marginBottom="8dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thêm món mới"
            android:textColor="@color/mau_den"
            android:textSize="22sp"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:padding="8dp"
            android:id="@+id/themmon"/>
        <Button
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            android:background="@mipmap/ic_x"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/btn_close"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_menu">
        <EditText
            android:singleLine="true"
            android:id="@+id/edt_foodname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên món ăn (uống)"
            android:background="@drawable/rounded_text"
            android:textSize="20sp"
            android:padding="8dp"
            android:gravity="center"/>
        <EditText
            android:layout_marginTop="8dp"
            android:layout_below="@id/edt_foodname"
            android:singleLine="true"
            android:id="@+id/edt_foodprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Đơn giá"
            android:inputType="number"
            android:background="@drawable/rounded_text"
            android:textSize="20sp"
            android:padding="8dp"
            android:gravity="center"/>
        <Button
            android:id="@+id/btn_confirm"
            android:layout_below="@id/edt_foodprice"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_button_list"
            android:text="Thêm"
            android:textAllCaps="false"
            android:textSize="22sp"/>
    </RelativeLayout>

</RelativeLayout>