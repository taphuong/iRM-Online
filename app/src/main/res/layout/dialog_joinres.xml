<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mau_trang"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_menu"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xin vào cửa hàng"
            android:textColor="@color/mau_den"
            android:textSize="22sp"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:padding="8dp"
            android:id="@+id/tv_join"/>
        <Button
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_alignParentEnd="true"
            android:background="@mipmap/ic_x"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/btn_close"/>
    </RelativeLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_marginTop="4dp"
        android:layout_below="@id/layout_menu"
        android:id="@+id/resemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:singleLine="true"
        android:id="@+id/edt_resemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/resemail" />
    </android.support.design.widget.TextInputLayout>
    <Button
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/resemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_confirm"

        android:textColor="@color/colorAccent"
        android:text="Xác nhận"
        android:textSize="19sp"/>


</RelativeLayout>