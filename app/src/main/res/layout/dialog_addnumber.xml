<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@drawable/gradient_background"
    android:paddingBottom="16dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_menu">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thêm bàn"
            android:textColor="@color/mau_den"
            android:textSize="22sp"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:padding="8dp"
            android:id="@+id/themban"/>
        <Button
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            android:background="@mipmap/ic_x"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/btn_close"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/number"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/layout_menu"
        android:layout_marginTop="16dp"
        android:background="@null">
        <Button
            android:visibility="invisible"
            android:layout_gravity="center_vertical"
            android:id="@+id/btn_minus"
            android:layout_marginRight="16dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/ic_minus" />
        <EditText
            android:id="@+id/edt_amount"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="1"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/rounded_text"
            android:inputType="number"/>
        <Button
            android:layout_gravity="center_vertical"
            android:id="@+id/btn_add"
            android:layout_marginLeft="16dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/ic_add"/>
    </LinearLayout>



    <Button
        android:id="@+id/btn_confirm"
        android:layout_below="@id/number"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_button_list"
        android:text="Thêm"
        android:textAllCaps="false"
        android:textSize="22sp"/>


</RelativeLayout>