<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@drawable/gradient_background"
    android:paddingBottom="16dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm bàn"
        android:textColor="@color/mau_den"
        android:textSize="22sp"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:padding="8dp"
        android:id="@+id/themban"/>
    <Button
        android:layout_margin="4dp"
        android:layout_alignParentRight="true"
        android:background="@mipmap/ic_x"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/btn_close"/>
    <EditText
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:id="@+id/edt_number"
        android:layout_below="@id/themban"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="1"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/rounded_text"
        android:inputType="number"/>
    <android.support.design.button.MaterialButton
        android:id="@+id/btn_minus"
        android:layout_below="@id/themban"
        android:layout_toStartOf="@id/edt_number"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@mipmap/ic_minus" />
    <android.support.design.button.MaterialButton
        android:id="@+id/btn_add"
        android:layout_below="@id/themban"
        android:layout_toEndOf="@id/edt_number"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@mipmap/ic_add"/>
    <android.support.design.button.MaterialButton
        android:id="@+id/btn_confirm"
        android:layout_below="@id/edt_number"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_button_list"
        android:text="Thêm"
        android:textAllCaps="false"
        android:textSize="22sp"/>


</RelativeLayout>