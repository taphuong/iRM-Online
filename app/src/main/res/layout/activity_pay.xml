<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PayActivity">
    <TextView
        android:textColor="@color/mau_trang"
        android:background="@color/colorPrimary"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/tv_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bàn số: "
        android:textSize="22sp"
        android:gravity="center"/>
    <RelativeLayout
        android:layout_below="@+id/tv_table"
        android:id="@+id/layout_ordered"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tong"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:paddingBottom="2dp">
        <TextView
            android:id="@+id/dachon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/tv_sl"
            android:text="Món đã gọi"
            android:textSize="18sp"
            android:textColor="@color/mau_do"
            android:layout_marginLeft="8dp"
            android:background="@color/mau_trang"
            android:layout_marginTop="-4dp"/>
        <TextView
            android:id="@+id/tv_sl"
            android:background="@color/mau_trang"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="SL"
            android:textColor="@color/mau_do"
            android:textSize="18sp"
            android:layout_toStartOf="@id/tv_total"
            android:gravity="center"
            android:layout_marginTop="-4dp"/>
        <TextView
            android:layout_marginRight="8dp"
            android:id="@+id/tv_total"
            android:background="@color/mau_trang"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="T.Tiền"
            android:textSize="18sp"
            android:textColor="@color/mau_do"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_marginTop="-4dp"/>

        <ListView
            android:layout_below="@+id/dachon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:id="@+id/lv_ordered">
        </ListView>
        <ListView
            android:layout_below="@id/lv_ordered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:id="@+id/lv_not">
        </ListView>


    </RelativeLayout>
    <RelativeLayout
        android:layout_above="@+id/layout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tong"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/mau_den"
            android:text="Tổng cộng: "
            android:layout_toStartOf="@id/tv_tong"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:id="@+id/tv_tong"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@color/mau_den"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:layout_marginBottom="4dp" />
        <TextView
            android:id="@+id/discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/mau_den"
            android:text="Chiết khấu: "
            android:layout_below="@+id/tv_tong"
            android:layout_toStartOf="@id/tv_tong"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/edt_discount"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/discount"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:text="0"
            android:textSize="20sp"
            android:gravity="center"
            android:inputType="number"
            android:background="@null"
            android:layout_below="@+id/tv_tong"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/mau_den"
            android:text="%"
            android:layout_below="@+id/tv_tong"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/mau_den"
            android:text="Tiền thanh toán: "
            android:layout_below="@+id/edt_discount"
            android:layout_toStartOf="@id/tv_tong"/>
        <TextView
            android:id="@+id/tv_totalall"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@color/mau_do"
            android:text=""
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/edt_discount"
            android:gravity="right" />
        <CheckBox
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cb_print"
            android:text="In hóa đơn (Chưa kết nối với máy in)"
            android:checked="true"
            android:layout_below="@id/tv_totalall"/>
        <Switch
            android:layout_below="@id/tv_totalall"
            android:id="@+id/sw_print"
            android:checked="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="In hóa đơn (Chưa kết nối với máy in)"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="8dp"
        android:id="@+id/layout_button"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10">
        <Button
            android:layout_weight="3"
            android:id="@+id/btn_pay"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_table"
            android:background="@drawable/rounded_primary"
            android:text="Thanh toán"
            android:textAllCaps="false"
            android:textSize="20sp"/>
        <Button
            android:layout_weight="7"
            android:id="@+id/btn_cancel"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_table"
            android:background="@drawable/rounded_primary"
            android:text="Đóng"
            android:textAllCaps="false"
            android:textSize="20sp"/>
    </LinearLayout>

</RelativeLayout>